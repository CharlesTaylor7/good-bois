    "bundle": "npm run build && vite build --config=vite.config.ts --outDir=../dist public && cp -r public/static dist/"
  },
  "devDependencies": {
    "purescript": "0.15.13",
    "spago": "0.93.25",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.10"
  },
  "overrides": {
    "rollup": "npm:@rollup/wasm-node"
  }
}
