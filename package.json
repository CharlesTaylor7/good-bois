{
  "name": "good-bois",
  "author": "Charles Taylor <charlestaylor95@gmail.com>",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "postinstall": "spago install",
    "watch:js": "vite --config=vite.config.ts --port=3000 public",
    "watch:purs": "watchexec -e purs,yaml,js -- npm run build",
